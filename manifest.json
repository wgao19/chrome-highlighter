{
  "manifest_version": 2,
  "name": "Chrome Highlighter",
  "description": "This extension saves a highlighted text and its original web page from a user selected text.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png"
  },
  "background": {
    "scripts": ["popup.js"]
  }
}
